@model FUNSAR.Models.Params

@{
    ViewData["Title"] = "Editar Parametro";
}
<br />
<br />
<h3 class="text-center">Editar Parametro</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Concepto"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Concepto" class="form-control" placeholder="Ingresa el concepto del parametro" />
                    <span asp-validation-for="Concepto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Valor"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Valor" class="form-control" placeholder="Ingresa el valor del parametro" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-4 m-lg-4">
                <div class="col">
                    <button type="submit" class="btn btn-outline-primary form-control" asp-route-id="@Model.id">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a Lista</a>
                </div>
            </div>

        </div>
    </div>
</form>
