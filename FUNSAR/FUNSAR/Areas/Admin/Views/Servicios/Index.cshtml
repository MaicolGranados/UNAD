@{
    ViewData["Title"] = "Servicios";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Servicios</h2>
        </div>
        <div class="col-4 text-bg-danger-rigth">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"> Crear Nuevo Servicio</i></a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblServicios" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Detalle</th>
                <th>Valor</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/servicio.js"></script>
}