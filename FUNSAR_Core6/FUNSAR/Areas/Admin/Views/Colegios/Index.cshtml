@using FUNSAR.Utilidades
@{
    ViewData["Title"] = "Colegios";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Colegios</h2>
        </div>
        <div class="col-4 text-bg-danger-rigth">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"> Crear Nuevo Colegio</i></a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblColegio" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brigada</th>
                <th>Nombre Colegio</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@if (User.IsInRole(CNT.Gestor))
{
    @section Scripts{
    <script src="~/js/colegiosGestor.js"></script>
}
}
@if (User.IsInRole(CNT.Administrativo) || User.IsInRole(CNT.SuperAdmin))
{
    @section Scripts{
    <script src="~/js/colegios.js"></script>
}
}
