@model FUNSAR.Models.ViewModels.AsistenciaVM
@{
    ViewData["Title"] = "Asistencia del dia";
    var fechaActual = Model.Asistencia.Fecha.ToString("dd/MM/yyyy");

}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 id="lblFecha" class="text-primary">Asistencias del día (@fechaActual)</h2>
        </div>
    </div>

    <br />
    <br />

    <table id="tblAsistenciaDia" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Tipo</th>
                <th>Documento</th>
                <th>Asistencia</th> <!-- Nueva columna para el select -->
            </tr>
        </thead>
    </table>
    
    <button id="sendDataBtn" class="btn btn-primary mt-3">Guardar Asistencias</button>
    <a asp-action="Index" class="btn btn-success mt-3">Volver a lista</a>
   
</div>

@section Scripts{
    <script src="~/js/asistenciaDaily.js"></script>
}