@using FUNSAR.Utilidades
@{
    ViewData["Title"] = "Asistencias";
}
@if (User.IsInRole(CNT.Colegio))
{

    <div class="container mt-4">
        <div class="row">
            <div class="col-8">
                <h2 class="text-primary">Asistencias</h2>
            </div>
            <div class="col-4 text-bg-danger-rigth">
                <a id="dailyAttendanceLink" asp-controller="Reportes" asp-action="Index" class="btn btn-primary mt-3"><i class="fas fa-plus"> Generar reporte</i></a>
            </div>
        </div>

        <br />
        <br />

        <table id="tblAsistenciasColegio" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tipo</th>
                    <th>Documento</th>
                    <th>Colegio</th>
                    <th>Asistencias</th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts{
    <script src="~/js/asistenciasColegio.js"></script>
}

}else if(User.IsInRole(CNT.Division))
{
<div class="container mt-4">

        <table id="tblAsistencias" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tipo</th>
                    <th>Documento</th>
                    <th>Colegio</th>
                    <th>Asistencias</th>
                </tr>
            </thead>
        </table>

        @section Scripts{
        <script src="~/js/asistenciasDivision.js"></script>
    }

    </div>
}else{

    <div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Asistencias</h2>
        </div>
        <div class="col-4 text-bg-danger-rigth">
            <a id="dailyAttendanceLink" asp-action="Daily" class="btn btn-primary mt-3"><i class="fas fa-plus"> Asistencia del Dia</i></a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblAsistencias" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Tipo</th>
                <th>Documento</th>
                <th>Colegio</th>
                <th>Asistencias</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>

    @section Scripts{
    <script src="~/js/asistencias.js"></script>
    }
    </div>
}